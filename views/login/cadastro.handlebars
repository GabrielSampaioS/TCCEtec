<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style/style.css">
    <title>Cadastro Chat</title>
</head>
<body>

    <div class="container">
        <h1>Cadastro de Usuário</h1>
        
        <form id="loginForm" action="/cadastro" method="post">
            <label for="e-mail">Email:</label>
            <input type="email" id="email" name="email" placeholder="Digite seu email" required>

            <label for="nome">Nome: </label>
            <input type="text" id="nome" name="nome" placeholder="Digite o nome de usuário" required>

            <label for="password">Senha: </label>
            <input type="password" id="senha" name="senha" placeholder="Digite a sua senha" required>
            
            <input type="submit" value="Cadastrar">
        </form>
        
        <button class="btn" id="btn-cadastro">Voltar para o Login</button>
        <button class="btn" id="btn-anonimo">Acessar de modo Anônimo</button>
    </div>
    

    <script>
        document.getElementById('btn-cadastro').onclick = function () {
            window.location.href = '/';
        };

        document.getElementById('btn-anonimo').onclick = function () {
            const user = 'Anonimo';
            localStorage.setItem('usuario', user);
            localStorage.setItem('isAuthenticated', 'true'); // Gambiarra? Talvez
            window.location.href = '/chat.html';
        };

        const ws = new WebSocket('ws://localhost:3000');
    </script>
</body>
</html>
